<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:id="@+id/move_lvl"
        android:textSize="30sp"
        android:layout_marginRight="20sp"
        android:layout_marginTop="10sp"
        android:layout_marginBottom="10sp"
        android:layout_marginLeft="5sp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:id="@+id/move_name"
        android:layout_toRightOf="@+id/move_lvl"
        android:layout_toEndOf="@+id/move_lvl"
        android:layout_marginRight="5sp"
        android:layout_marginTop="10sp"
        android:layout_marginBottom="10sp"
        android:layout_marginLeft="5sp"
        android:textSize="30sp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:id="@+id/move_type"
        android:layout_toRightOf="@+id/move_name"
        android:layout_toEndOf="@+id/move_name"
        android:layout_marginRight="5sp"
        android:layout_marginTop="20sp"
        android:layout_marginBottom="20sp"
        android:layout_marginLeft="5sp"
        android:textSize="20sp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:id="@+id/move_cat"
        android:layout_toRightOf="@+id/move_type"
        android:layout_toEndOf="@+id/move_type"
        android:layout_marginRight="5sp"
        android:layout_marginTop="20sp"
        android:layout_marginBottom="20sp"
        android:layout_marginLeft="5sp"
        android:textSize="20sp"
        android:layout_gravity="right"/>

</RelativeLayout>